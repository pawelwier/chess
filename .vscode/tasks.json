{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Built with GCC 11.3.0",
			"command": "/bin/g++-11",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++20",
				"${workspaceFolder}/*.cpp",
				"${workspaceFolder}/pieces/*.cpp",
				"${workspaceFolder}/utils/*.cpp",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system",
				"-lm",
				"-o",
				"${fileDirname}/build/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /bin/g++-11"
		}
	]
}